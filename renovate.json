{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>hashi-at-home/renovate-config"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "matchDepTypes": [
        "dependencies"
      ],
      "automerge": true,
      "requiredStatusChecks": [
        "build-and-test"
      ]
    }
  ]
}
